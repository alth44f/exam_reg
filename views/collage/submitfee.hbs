<div class="container mt-5">
    <form action="/collage/submit-fee" method="post">
        <div class="row mt-5">
            <h2 class="text-center mt-5">Submit Fee</h2>
            <input type="text" value="{{email}}" name="email" hidden>
            <div class="col-lg-6">
                <select class="form-select" name="sem" id="course" required>
                    <option selected disabled value="">Choose...</option>
                    <option value="1">1st Sem</option>
                    <option value="2">2nd Sem</option>
                    <option value="3">3rd Sem</option>
                    <option value="4">4th Sem</option>
                    <option value="5">5th Sem</option>
                    <option value="6">6th Sem</option>
                </select>
            </div>
            <div class="col-lg-6">
                <input type="number" name="fee" id="fee" class="form-control" placeholder="Example: 12000" required>
            </div>
            <div class="col-lg-12 text-center mt-5">
                <input type="submit" value="Submit" class="btn btn-outline-success mt-2">
            </div>
        </div>
    </form>
</div>