<div class="container">
    <form action="#" method="post">
        <div class="row">
            <form action="/student" method="post">
                <div class="col-lg-12 p-3">
                    <h2>Basic details</h2>
                    {{#if err}}
                    <h3 class="text-center text-warning fw-bold">Already Registered.</h3>
                    {{/if}}
                </div>
                <div class="col-lg-6 p-2">
                    <label for="name">Name</label>
                    <input type="text" value="{{student.email}}" name="email" hidden>
                    <input type="text" value="{{student.name}}" id="name" placeholder="Enter Your Name"
                        class="form-control" readonly>
                </div>
                <div class="col-lg-6 p-2">
                    <label for="aadhar">Aadhar number</label>
                    <input type="number" value="{{student.aadhar}}" id="aadhar" placeholder="Enter Aadhar Number"
                        class="form-control" readonly>
                </div>
                <div class="col-lg-6 p-2">
                    <label for="reg_no">Register number</label>
                    <input type="text" value="SA{{student.reg_no}}{{student.course}}" id="reg_no"
                        placeholder="Enter Register Number" name="reg_no" class="form-control" readonly>
                </div>
                <div class="col-lg-6 p-2">
                    <label for="second_lang">Second Language</label>
                    <input type="text" name="second_lang" id="second_lang" placeholder="Enter Second Language"
                        class="form-control">
                </div>
                <div class="col-lg-6 p-2">
                    <p class="text-danger text-center">Warning: Please make sure you have selected the correct semester
                        before proceeding.</p>
                    <label for="second_lang">Semester</label>
                    <select class="form-select" name="sem" id="course" required>
                        <option selected disabled value="">Choose...</option>
                        <option value="1">1st Sem</option>
                        <option value="2">2nd Sem</option>
                        <option value="3">3rd Sem</option>
                        <option value="4">4th Sem</option>
                        <option value="5">5th Sem</option>
                        <option value="6">6th Sem</option>
                    </select>
                </div>
                <div class="col-lg-12 p-3">
                    <h2>Fill paper</h2>
                </div>
                <div class="paper">
                    <div class="row">
                        <div class="col-lg-12 p-2">
                            <label for="papercode">Paper</label>
                            <select class="form-select" name="paper1" id="papercode" required>
                                <option selected value="">Choose...</option>
                                {{#each papers}}
                                <option value="{{papercode}}-{{papername}}">{{papercode}}-{{papername}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="col-lg-12 p-2">
                            <label for="papercode">Paper code</label>
                            <select class="form-select" name="paper2" id="papercode" required>
                                <option selected value="">Choose...</option>
                                {{#each papers}}
                                <option value="{{papercode}}-{{papername}}">{{papercode}}-{{papername}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 p-2">
                            <label for="papercode">Paper code</label>
                            <select class="form-select" name="paper3" id="papercode" required>
                                <option selected value="">Choose...</option>
                                {{#each papers}}
                                <option value="{{papercode}}-{{papername}}">{{papercode}}-{{papername}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="col-lg-12 p-2">
                            <label for="papercode">Paper code</label>
                            <select class="form-select" name="paper4" id="papercode" required>
                                <option selected value="">Choose...</option>
                                {{#each papers}}
                                <option value="{{papercode}}-{{papername}}">{{papercode}}-{{papername}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 p-2">
                            <label for="papercode">Paper code</label>
                            <select class="form-select" name="paper5" id="papercode">
                                <option selected value="">Choose...</option>
                                {{#each papers}}
                                <option value="{{papercode}}-{{papername}}">{{papercode}}-{{papername}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="col-lg-12 p-2">
                            <label for="papercode">Paper code</label>
                            <select class="form-select" name="paper6" id="papercode">
                                <option selected value="">Choose...</option>
                                {{#each papers}}
                                <option value="{{papercode}}-{{papername}}">{{papercode}}-{{papername}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 p-2">
                            <label for="papercode">Paper code</label>
                            <select class="form-select" name="paper7" id="papercode">
                                <option selected value="">Choose...</option>
                                {{#each papers}}
                                <option value="{{papercode}}-{{papername}}">{{papercode}}-{{papername}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="col-lg-12 p-2">
                            <label for="papercode">Paper code</label>
                            <select class="form-select" name="paper8" id="papercode">
                                <option selected value="">Choose...</option>
                                {{#each papers}}
                                <option value="{{papercode}}-{{papername}}">{{papercode}}-{{papername}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 p-2 text-center">
                    {{!-- <button id="add-paper-btn" type="button" class="btn btn-primary">Add Paper</button> --}}
                    <button type="submit" class="btn btn-success">Submit</button>
                </div>
            </form>
        </div>
    </form>
</div>
