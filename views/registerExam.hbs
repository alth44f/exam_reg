<div class="container">
    <form action="#" method="post">
        <div class="row">
            <div class="col-lg-12 p-3">
                <h2>Basic details</h2>
            </div>
            <div class="col-lg-6 p-2">
                <label for="name">Name</label>
                <input type="text" name="name" id="name" placeholder="Enter Your Name" class="form-control">
            </div>
            <div class="col-lg-6 p-2">
                <label for="aadhar">Aadhar number</label>
                <input type="text" name="aadhar" id="aadhar" placeholder="Enter Aadhar Number" class="form-control">
            </div>
            <div class="col-lg-6 p-2">
                <label for="reg_no">Register number</label>
                <input type="text" name="reg_no" id="reg_no" placeholder="Enter Register Number" class="form-control">
            </div>
            <div class="col-lg-6 p-2">
                <label for="second_lang">Second Language</label>
                <input type="text" name="second_lang" id="second_lang" placeholder="Enter Second Language"
                    class="form-control">
            </div>
            <div class="col-lg-12 p-3">
                <h2>Fill paper</h2>
            </div>
            <div class="paper">
                <div class="row">
                    <div class="col-lg-6 p-2">
                        <label for="papercode">Paper code</label>
                        <input type="text" name="papercode" id="papercode" class="form-control">
                    </div>
                    <div class="col-lg-6 p-2">
                        <label for="papername">Paper name</label>
                        <input type="text" name="papername" id="papername" class="form-control">
                    </div>
                </div>
            </div>
            <div class="col-lg-12 p-2 text-center">
                <button id="add-paper-btn" type="button" class="btn btn-primary">Add Paper</button>
                <a href="#" class="btn btn-success">Submit</a>
            </div>
        </div>
    </form>
</div>
<script>
    // Select the button and the paper container
    const addPaperBtn = document.getElementById('add-paper-btn');
    const paperContainer = document.querySelector('.paper'); // Select .paper div

    // Function to add a new row inside the paper container
    function addPaperFields() {
        // Create a new div for the row
        const paperRow = document.createElement('div');
        paperRow.classList.add('row');

        // Add the paper code and paper name input fields to the new row
        paperRow.innerHTML = `
            <div class="col-lg-6 p-2">
                <label for="papercode">Paper code</label>
                <input type="text" name="papercode" class="form-control">
            </div>
            <div class="col-lg-6 p-2">
                <label for="papername">Paper name</label>
                <input type="text" name="papername" class="form-control">
            </div>
        `;

        // Append the new row to the .paper div
        paperContainer.appendChild(paperRow);
    }

    // Add event listener to trigger the function when the button is clicked
    addPaperBtn.addEventListener('click', addPaperFields);
</script>