<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <!-- Profile Picture -->
            <div class="card">
                <img src="img/{{student.gender}}.png" class="card-img-top" alt="Profile Picture">
                <div class="card-body text-center">
                    <h5 class="card-title">{{student.name}}</h5>
                    {{!-- <p class="text-muted">{{log student}}</p> --}}
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <!-- Profile Information -->
            <div class="card">
                <div class="card-header">
                    <h4>Profile Information</h4>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Email:</strong>
                        <p>{{student.email}}</p>
                    </div>
                    <div class="mb-3">
                        <strong>course:</strong>
                        <p>{{student.course}}</p>
                    </div>
                    <div class="mb-3">
                        <strong>phone:</strong>
                        <p>{{student.phone}}</p>
                    </div>
                    <div class="mb-3">
                        <strong>aadhar:</strong>
                        <p>{{student.aadhar}}</p>
                    </div>
                     <div class="mb-3">
                        <strong>gender:</strong>
                        <p>{{student.gender}}</p>
                    </div>
                     <div class="mb-3">
                        <strong>dob:</strong>
                        <p>{{student.dob}}</p>
                    </div>

                </div>
            </div>
        </div>